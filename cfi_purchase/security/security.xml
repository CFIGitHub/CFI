<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sale_order_line_mrp_cfi" model="ir.rule">
            <field name="name">Access sale order line related to MO</field>
            <field name="model_id" ref="sale.model_sale_order_line"/>
            <field name="domain_force">[('production_line_ids', '!=', False)]</field>
            <field name="groups" eval="[(4, ref('mrp.group_mrp_user'))]"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="sale_order_mrp_cfi" model="ir.rule">
            <field name="name">Access sale order related to MO</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('mrp_production_ids', '!=', False)]</field>
            <field name="groups" eval="[(4, ref('mrp.group_mrp_user'))]"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>
    </data>
</odoo>
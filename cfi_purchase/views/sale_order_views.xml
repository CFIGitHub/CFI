<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherited_form_cfi" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.cfi</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='payment_term_id']" position="after"> -->
            <xpath expr="//group[2]" position="inside">
               <field name="purchase_order_ids" attrs="{'invisible': [('purchase_order_count', '=', 0)]}">
                    <tree>
                        <field name="name" readonly="1"/>
                    </tree>
                </field>
               <field name="mrp_production_ids" attrs="{'invisible': [('mrp_production_count', '=', 0)]}">
                    <tree>
                        <field name="name" readonly="1"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
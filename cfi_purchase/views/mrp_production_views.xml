<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="mrp_production_form_view_inherit_cfi" model="ir.ui.view">
            <field name="name">mrp.production.view.form.view.inherit.cif</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='company_id']" position="after"> -->
                <xpath expr="//group[2]" position="inside">
                    <field name="sale_order_count" invisible="1"/>
                    <field name="sale_order_ids" attrs="{'invisible': [('sale_order_count', '=', 0)]}">
                        <tree>
                            <field name="name" readonly="1"/>
                        </tree>
                    </field>
                    <field name="sale_line_id" attrs="{'invisible': [('sale_order_count', '=', 0)]}">
                        <tree>
                            <field name="name" readonly="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
</odoo>